#aliases
alias ls='ls -G'
alias df='df -h'
alias du='du -h'
alias rm='rm -i'
alias app='open -a'
alias cls='clear; echolr $PWD 67 && ls'
alias zzz='pmset sleepnow'
alias debug='env -i /bin/zsh -f'
alias zload='source ~/.zshrc && clear && choose ~/.zcfg/quotes 39 && echo'
alias tload='tmux source-file ~/.tmux.conf'
alias nano='/usr/local/Cellar/nano/5.0/bin/nano'
alias ipython='hash -r && ipython'

#Configuration files
alias stubconf='micro /usr/local/etc/stubby/stubby.yml'

#DNS
alias qname='dig +short txt qnamemintest.internet.nl'
alias dnscrypt='sudo /usr/local/opt/stubby/sbin/stubby-setdns-macos.sh'
alias dnsreset='sudo networksetup -setdnsservers Wi-Fi 1.1.1.1 1.0.0.1 8.8.8.8 8.8.4.4'

#Servers
alias thepromethean='ssh thepwkwo@server60.web-hosting.com -p21098'
alias thirdeye='ssh -o ConnectTimeout=3 root@63.250.37.29 -p43076'

#Mailboxes
alias mail.theprometheanghost@gmail.com='mutt -F ~/.mutt/accounts/theprometheanghost@gmail.conf'

alias mail.thomas@thepromethean.net='mutt -F ~/.mutt/accounts/thomas@thepromethean.conf'
alias mail.admin@thepromethean.net='mutt -F ~/.mutt/accounts/admin@thepromethean.conf'
alias mail.accounts@thepromethean.net='mutt -F ~/.mutt/accounts/accounts@thepromethean.conf'

alias mail.thomas@thirdeye.live='mutt -F ~/.mutt/accounts/thomas@thirdeye.conf'
alias mail.admin@thirdeye.live='mutt -F ~/.mutt/accounts/admin@thirdeye.conf'
alias mail.theoracle@thirdeye.live='mutt -F ~/.mutt/accounts/theoracle@thirdeye.conf'

#globals
alias -g LESS='| less'
alias -g NULL='&> /dev/null'
